<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Porfolio personnel d'Emmanuelle Mercadal, développeuse d'application PHP / Symfony">
        <meta name="author" content="E Mercadal">
        <link rel="shortcut icon" href="#">

        <!-- Open Graph -->
        <meta property="og:url"     content="https://e-mercadal.com" />
        <meta property="og:title"   content="Mon portfolio personnel" />
        <meta property="og:description" content="Mon porfolio personnel. Emmanuelle Mercadal, développeuse d'application PHP / Symfony" />
        <meta property="og:image"   content="#" />

        <!-- Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Satisfy" rel="stylesheet">

        <title>{% block title %}Emmanuelle Mercadal{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <!-- NAVIGATION
        ============================================================ -->
        <header id="page-top">
            <div class="nav smMenu"> <!-- Navigation -->
                <div class="navbar d-flex justify-content-between p-0 w-100">
                    <div class="name"><a href="{{ path('home_page') }}">Emmanuelle Mercadal</a></div>
                    <div class="navbar_links">
                        <ul class="d-flex flex-row">
                            <li><a href="#">Projets</a></li>
                            <li><a href="{{ path('about_page') }}">A propos</a></li>
                            <li><a href="{{ path('contact_page') }}">Contact</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        {#<div class="row w-100 xsMenu">
            <div class="name text-center col-8"><a href="{{ path('home_page') }}">Emmanuelle<br/> Mercadal</a></div>
            <ul class="navbar-nav col-4">
                <li class="nav-item-dropdown pt-5">
                    <a class="nav-link dropdown-toggle btn btn-light text-center" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Menu <span class="caret pull-right"></span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <a href="#" class="dropdown-item w-100">Projets</a>
                        <a href="#" class="dropdown-item">A propos</a>
                        <a href="#" class="dropdown-item">Contact</a>
                    </div>
                </li>
            </ul>
        </div>#}

        <!-- BODY
        ============================================================ -->
        {% block body %}{% endblock %}

        <!-- FOOTER
        ============================================================ -->
        <div id="copyright" class="text-white">
            <div class="d-flex justify-content-between p-0 w-100">
                <div class="pl-4"><p class="pt-1">Tous droits réservés &copy; 2020 - Emmanuelle Mercadal</p></div>
                <div><p class="pt-1 pr-4"><a href="{{ path('mentions_page') }}">Mentions légales</a></p></div>
            </div>
        </div>

        {% block javascripts %}
            <script src="https://use.fontawesome.com/b1a2104cde.js"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
